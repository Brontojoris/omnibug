{
  "name": "Chromnibug",
  "version": "0.1",
  "manifest_version": 2,

  "description": "Omnibug for Chrome",
  /* commented out for now
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  */

  "background": {
    "scripts": [ "eventPage.js" ],
    "persistent": true // must be persistent to use WebRequest!
  },

  "devtools_page": "devtools.html",

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "*://*/*"
  ]

}

